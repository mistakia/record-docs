$accentColor = #5f0084

body
  font-family -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif
  background rgba(240,234,220,0.5)

h1
  font-weight 100
  line-height 1.1

a
  text-decoration none

h2
h3
h4
h5
h6
  font-weight 500
  line-height 1.2
h1
  font-size 38px

h2
  font-size 32px
  margin-top 55px

h3
  font-size 24px

h4
  font-size 16px

h5
  font-size 14px

h6
  font-size 12px

ol
ul
p
  line-height 1.7
  color rgb(60,60,60)

pre
  padding 10px
  background-color rgba(27,31,35,.05)
  overflow hidden
  overflow-x scroll
  code
    background-color transparent

code
  background-color rgba(27,31,35,.05)
  font-size 85%
  padding .2em .4em
  border-radius 3px

#main
  max-width 550px
  padding 0 16px
  margin 0 auto
  a
    border-bottom 2px solid $accentColor
    color $accentColor
    &:hover
      color red

#menu
  position fixed
  top 100px
  display flex
  flex-direction column
  a
    flex 1
    padding 5px 10px
    text-transform capitalize
    font-size 14px
    color rgba(60,60,60,0.9)
    border-right 2px solid rgb(200,200,200)
    text-align right
    &:hover
      background rgba(200,200,200,0.15)
    &.active
      color rgb(0,0,0)
      border-color rgb(0,0,0)

.screenshot
  position relative
  a
    border-bottom none !important
  img
    width 100%
  &:hover img
    opacity 0.5
  p
    font-size 10px
  &:after
  &:before
    content ''
    position absolute
    top 50%
    left 50%
  &:after
    width 0
    height 0
    border 16px solid transparent
    border-left 20px solid #fff
    margin-top -18px
    margin-left -7px
    -webkit-filter drop-shadow(0px 0px 2px rgba(0,0,0,0.25))
  &:before
    margin-top -34px
    margin-left -34px
    width 60px
    height 60px
    border 3px solid #fff
    border-radius 50%
    box-shadow 0 0 4px rgba(black, 0.18)
    background rgba(black, 0.42)

@media (max-width: 850px)
  #menu
    position relative
    top 0

@media (min-width: 850px)
  .screenshot
    margin-left -40px
    margin-right -40px
