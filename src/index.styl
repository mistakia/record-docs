$accentColor = #5f0084

body
  font-family -apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif
  background rgba(240,234,220,0.5)

h1
  font-weight 100
  line-height 1.1

a
  text-decoration none

h2
h3
h4
h5
h6
  font-weight 500
  line-height 1.2
h1
  font-size 38px

h2
  font-size 32px
  margin-top 55px

h3
  font-size 24px

h4
  font-size 16px

h5
  font-size 14px

h6
  font-size 12px

ol
ul
p
  line-height 1.7
  color rgb(60,60,60)

pre
  padding 10px
  background-color rgba(27,31,35,.05)
  overflow hidden
  overflow-x scroll
  code
    background-color transparent

code
  background-color rgba(27,31,35,.05)
  font-size 85%
  padding .2em .4em
  border-radius 3px

#main
  max-width 550px
  padding 0 16px
  margin 0 auto
  a
    border-bottom 2px solid $accentColor
    color $accentColor
    &:hover
      color red

#menu
  position fixed
  top 100px
  display flex
  flex-direction column
  a
    flex 1
    padding 5px 10px
    text-transform capitalize
    font-size 14px
    color rgba(60,60,60,0.9)
    border-right 2px solid rgb(200,200,200)
    text-align right
    &:hover
      background rgba(200,200,200,0.15)
    &.active
      color rgb(0,0,0)
      border-color rgb(0,0,0)

@media (max-width: 850px)
  #menu
    position relative
    top 0
